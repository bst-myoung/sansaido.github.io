---
import Image from 'astro/components/Image.astro'
import { getImage } from 'astro:assets'

interface Props {
    direction: "horizontal" | "vertical",
    title: {
        en: string,
        ja: string,
    },
    icon: string | ImageMetadata,
    alt: string
}
const {direction, title, icon, alt="アイコン"} = Astro.props

const iconImg = await getImage({
    src: icon,
    format: 'svg',
})

---

<div class=" rounded-2xl py-4 px-8 mx-auto block w-fit mb-6 bg-white">
    <!-- TODO: vertical | horizontal -->
    <h2 class="flex flex-row gap-3 items-center">
        <i>
            <Image
                src={iconImg.src},
                alt={alt},
                height="34",
                width="36",
            />
        </i>
        <div class="flex flex-col">
            <div class="text-red font-en uppercase tracking-widest ">{title.en}</div>
            <div class="font-serif text-3xl tracking-wider">{title.ja}</div>
        </div>
    </h2>
</div>