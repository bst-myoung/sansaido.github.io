---
import Image from 'astro/components/Image.astro'
import { getImage } from 'astro:assets'

interface Props {
    direction: "horizontal" | "vertical",
    title: {
        en: string,
        ja: string,
    },
    icon: string | ImageMetadata,
    alt: string
}
const {direction, title, icon, alt="アイコン"} = Astro.props

const iconImg = await getImage({
    src: icon,
    format: 'svg',
})

---

<div class="bg-white rounded-2xl p-4 mx-auto block w-fit">
    <!-- TODO: vertical | horizontal -->
    <h2 class="flex flex-row gap-4">
        <i>
            <Image
                src={iconImg.src},
                alt={alt},
                height="40",
                width="40",
            />
        </i>
        <div class="flex flex-col">
            <div class="text-red font-en uppercase">{title.en}</div>
            <div class="font-serif">{title.ja}</div>
        </div>
    </h2>
</div>